<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= Approval.human_attribute_name(:pending_changes) %></th>
      <th><%= Approval.human_attribute_name(:note) %></th>
      <th><%= Approval.human_attribute_name(:state) %></th>
      <th><%= Approval.human_attribute_name(:approved_at) %></th>
      <th>
        <%= link_to new_admin_approval_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @approvals.each do |approval| %>
    <tr>
      <td><%= approval.pending_changes %></td>
      <td><%= approval.note %></td>
      <td><%= approval.state %></td>
      <td><%= approval.approved_at %></td>
      <td>
        <%= link_to admin_approval_path(approval), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_approval_path(approval), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_approval_path(approval), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @approvals %>
